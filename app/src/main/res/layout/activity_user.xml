<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivUserIcon"
        android:layout_width="@dimen/user_activity_ImageView_width"
        android:layout_height="@dimen/user_activity_ImageView_height"
        android:layout_marginTop="@dimen/user_activity_ImageView_marginTop"
        android:transitionName="@string/user_icon_transition_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/user_activity_TextView_marginTop"
        android:textSize="@dimen/user_activity_TextView_textSize"
        android:textStyle="bold"
        android:transitionName="@string/user_name_transition_name"
        app:layout_constraintLeft_toLeftOf="@id/ivUserIcon"
        app:layout_constraintRight_toRightOf="@id/ivUserIcon"
        app:layout_constraintTop_toBottomOf="@id/ivUserIcon"
        tools:text="@tools:sample/full_names" />
</androidx.constraintlayout.widget.ConstraintLayout>